!!! XML
project
  actions
  description
  keepDependencies false
  != capture(include("common.jade"))
  assignedNode ubuntu
  canRoam false
  blockBuildWhenUpstreamBuilding false
  jdk= project.jdks.head
  triggers.vector
    'hudson.triggers.SCMTrigger'
      spec */15 * * * *
  concurrentBuild false
  buildWrappers
    'hudson.plugins.build__timeout.BuildTimeoutWrapper'
      timeoutMinutes= project.checkin.timeout
      failBuild false
  builders
    'hudson.tasks.Maven'
      - if ( build.maven.name.startsWith("maven-3") ) 
        targets --show-version --batch-mode --fail-never -Djava.io.tmpdir=${TMP} clean install #{build.maven.goalsArguments}
      - else
        targets --settings ${HOME}/.m2/m2-settings.xml --show-version --batch-mode --fail-never -Djava.io.tmpdir=${TMP} clean install #{build.maven.goalsArguments}
      mavenName #{build.maven.name}
      jvmOptions #{project.jvmOpts}
      pom #{build.maven.rootPom}
      usePrivateRepository false
      -# properties>prop1=prop2</properties>
